        zoomOffset: -1,
        accessToken: 'pk.eyJ1IjoiZ3V5d2FuZ3VldSIsImEiOiJjazc0amN4ZzkwOG14M2twYXhpbDZ6NjRwIn0.HU_TD-k9bLv6_ctUhyIRuw'
    }).addTo(mymapJob);

    var options = {
        enableHighAccuracy: false,
        timeout: 5000,
        maximumAge: Infinity
    };


    navigator.geolocation.getCurrentPosition(function (position) {
        var lat = position.coords.latitude;
        var long = position.coords.longitude;
        mymapJob.setView([lat, long], 13);
    }, null, options)


    $(function () {

        $("select.searchcategory").change(function () {
            var select = $(this).children("option:selected").val();

            if (select == "Emploi") {
                $('#JobId').removeClass('hidden');
            } else {
                $('#JobId').addClass('hidden');
            }
            if (select == "Tout") {
                $('#jobSectionResult').addClass('hidden');
                $('#AllCategoryResult').removeClass('hidden');
            }
            if (select == "Immobilier") {
                $('#ImmobilierId').removeClass('hidden');
            } else {
                $('#ImmobilierId').addClass('hidden');
            }
        });

        $('#submitApart').click(function () {
            $('#jobSectionResult').removeClass('hidden');
            $('#AllCategoryResult').addClass('hidden');
            jobMarkers.clearLayers()
             ApartMarkers.clearLayers()

              $.ajax({
            type: "POST",
            url: '@Url.Action("ResultSearchOfferApart_Jason", "ApartmentRentalSearch")',
            dataType: "json",
            headers: {
                //"api-key": searchServiceApiKey,
                "Content-Type": "application/json"
            },
            data: JSON.stringify({

                type: $("#Type").val(),
                town: $(".TownSearchApart").val(),
                minSurface: $("#MinApartSurface").val(),
                maxSurface: $("#MaxApartSurface").val(),
                minPrice: $(".PriceMinSearchApart").val(),
                maxPrice: $(".PriceMaxSearchApart").val(),
                furnitureOrNot: $("#FurnitureOrNot").val(),
                roomNumber: $("#RoomNumber").val(),
            }),
                  success:
                      function (data) {

                    for (var i = 0; i < data.length; i++) {
                        console.log(data[i].Coordinate.Lat);
                        var popup = '<div class="thumbnail"> <a class="img-rounded" href="' + data[i].Images[0] + '" data-lightbox="mygallery" data-title="Image du groupe local ' + data[i].Title + '">  <img id="ImageDetailIniById" src="' + data[i].Images[0] + '" alt="photo groupe local' + data[i].Title + '" height="40"></a> </div>' +
                            '<b><span class="glyphicon glyphicon-user"></span> Titre : </b>' + data[i].Title +
                            '<br/><b>Adresse : </b>' + data[i].Town +
                            '<br/><b>Lien: </b>' + '<a class="btn btn-info btn-sm" role="button" href="/ApartmentRental/ApartDetail/' + data[i].id + '">plus de détails <span class="glyphicon glyphicon glyphicon-hand-right"></span></a>'


                        var markerjob = L.marker([data[i].Coordinate.Lat, data[i].Coordinate.Lon])
                        .bindPopup(popup)
                       // .addTo(mymapJob);

                        ApartMarkers.addLayer(markerjob)
                          }
                          // $("#mymapJob").load(" #mymapJob");
                          mymapJob.addLayer(ApartMarkers);
                  },
                  error: function (xhr) {
                      console.log(xhr.responseText);
                      alert("Une erreur est survenu  !");
                  }
              });
            mymapJob.invalidateSize();
        });

        $('#submitJob').click(function () {
            $('#jobSectionResult').removeClass('hidden');
            $('#AllCategoryResult').addClass('hidden');
            ApartMarkers.clearLayers()
            jobMarkers.clearLayers()

              $.ajax({
            type: "POST",
            url: '@Url.Action("ResultSearchOfferJob_Jason", "JobOfferSearch")',
            dataType: "json",
            headers: {
                //"api-key": searchServiceApiKey,
                "Content-Type": "application/json"
            },
            data: JSON.stringify({

                sector: $("#ActivitySectorJob").val(),
                town: $(".TownSearchJob").val(),
                contract: $("#TypeContractJob").val(),
                minPrice: $("#PriceMinSearch").val(),
                maxPrice: $("#PriceMaxSearch").val(),
            }),
                  success:
                      function (data) {

                    for (var i = 0; i < data.length; i++) {
                        console.log(data[i].Coordinate.Lat);
                       
                        var popup = '<div class="thumbnail"> <a class="img-rounded" href="' + data[i].Images[0] + '" data-lightbox="mygallery" data-title="Image du groupe local ' + data[i].Title + '">  <img id="ImageDetailIniById" src="' + data[i].Images[0] + '" alt="photo groupe local' + data[i].Title + '" height="40"></a> </div>' +
                            '<b><span class="glyphicon glyphicon-user"></span> Titre : </b>' + data[i].Title +
                            '<br/><b>Adresse : </b>' + data[i].Town + 
                            '<br/><b>Lien: </b>' + '<a class="btn btn-info btn-sm" role="button" href="/Job/JobDetail/' + data[i].id + '">plus de détails <span class="glyphicon glyphicon glyphicon-hand-right"></span></a>'



                        var markerjob = L.marker([data[i].Coordinate.Lat, data[i].Coordinate.Lon])
                           .bindPopup(popup)
                       // .addTo(mymapJob);

                        jobMarkers.addLayer(markerjob)
                          }
                          // $("#mymapJob").load(" #mymapJob");
                          mymapJob.addLayer(jobMarkers);
                  },
                  error: function (xhr) {
                      console.log(xhr.responseText);
                      alert("Une erreur est survenu  !");
                  }
              });
            mymapJob.invalidateSize();
        });

         $("a[href='#ResultMap']").on('shown.bs.tab', function (e) {

             mymapJob.invalidateSize();
         });

    })
</script>

