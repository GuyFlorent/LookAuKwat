@{
    ViewBag.Title = "Contact";
}

<section class="row">
    <div class="row">
        <div class="form-group">
            <label for="selectCategory">Choisir une catégorie</label>
            <select class="form-control Addcategory" data-show-icon="true">
                <option >Tout</option>
                <option data-content="<i class='glyphicon glyphicon-briefcase'></i>">Emploi</option>
                <option data-content="<i class='glyphicon glyphicon-home'></i>">Immobilier</option>

            </select>
        </div>
    </div>
    <div class="row">
        <div id="MyModalAddJob" class="modal fade" role="dialog">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">Détails de événement<span id="eventTitle"></span></h4>
                    </div>
                    <div class="modal-body">

                        @{
                            Html.RenderAction("AddJobs_PartialView", "Job");
                        }

                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Fermer</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script type="text/javascript">
    $(function () {
        $("select.Addcategory").change(function () {
            var select = $(this).children("option:selected").val();
            
            if (select == "Emploi") {
                $('#MyModalAddJob').modal();
            }
        });
    });
</script>