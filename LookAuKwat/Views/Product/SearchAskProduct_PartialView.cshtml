@model LookAuKwat.ViewModel.AskJobViewModel
@using LookAuKwat.ViewModel


@using (Ajax.BeginForm("ResultSearchAskProduct_PartialView", "Product", new AjaxOptions
{
    HttpMethod = "GET",
    InsertionMode = InsertionMode.Replace,
    UpdateTargetId = "ResulList",
    // OnFailure = "ErreurRecherche",
    LoadingElementId = "charging"
}
         ))
{
    @Html.AntiForgeryToken()

    <div>
        <h4 class="text-center">Filtrer votre recherche dans la rubrique des demandes</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="row">


        <div class="form-group col-xs-6 col-sm-4 col-md-3">
            @Html.LabelFor(model => model.CagtegorieSearchAsk, htmlAttributes: new { @class = "control-label col-md-2" })

            @Html.DropDownListFor(model => model.CagtegorieSearchAsk, SelectListMethod.GetListCategory(), "Toutes", new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.CagtegorieSearchAsk, "", new { @class = "text-danger" })

        </div>
        <div class="form-group col-xs-6 col-sm-4 col-md-3">
            @Html.LabelFor(model => model.TownSearchAsk, htmlAttributes: new { @class = "control-label col-md-2" })

            @Html.DropDownListFor(model => model.TownSearchAsk, SelectListMethod.GetListTownCameroon(), "Toutes", new { @class = "form-control" } )
            @Html.ValidationMessageFor(model => model.TownSearchAsk, "", new { @class = "text-danger" })

        </div>

        <div class="form-group col-xs-6 col-sm-4 col-md-3">
            @Html.LabelFor(model => model.TitleSearchAsk, htmlAttributes: new { @class = "control-label col-md-2" })

            @Html.EditorFor(model => model.TitleSearchAsk, new { htmlAttributes = new { @class = "form-control", placeholder = "Je recherche..." } })
            @Html.ValidationMessageFor(model => model.TitleSearchAsk, "", new { @class = "text-danger" })

        </div>


    </div>

        <button type="submit" class="btn btn-primary">
            <span class="glyphicon glyphicon-search"></span> Rechercher
        </button>
    </div>
}

