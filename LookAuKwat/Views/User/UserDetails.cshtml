@model LookAuKwat.Models.ApplicationUser

@{
    ViewBag.Title = "Mon compte";
}

<h2>Details des informations</h2>

<div>
    
    <dl class="dl-horizontal">

        <dt>
            @Html.DisplayNameFor(model => model.FirstName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Email)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>

        <dt>
            Téléphone <span class="glyphicon glyphicon-phone"></span>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PhoneNumber)
        </dd>


    </dl>


</div>
<div class="row">
    <div class="col-xs-3">
        @Html.ActionLink("Retour à l'accueil", "Index", "Home", null, new { @class = "btn btn-primary" })
    </div>
    <div class="col-xs-offset-1 col-xs-3">
        @Html.ActionLink("Modifier les informations", "UpdateUserInformations", "User", new { id = Model.Id }, new { @class = "btn btn-primary" })
    </div>
    <div class="col-xs-offset-1 col-xs-3">
        @Html.ActionLink("Mes annonces", "Contact", "Home",null,  new { @class = "btn btn-primary" })
