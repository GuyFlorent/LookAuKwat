<h2>Détails de l'annonce catégorie immobilier</h2>

<div id="MyModalContactApart" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h2 class="modal-title">Envoyer un message à @Model.User.FirstName<span id="eventTitle"></span></h2>
            </div>
            <div class="modal-body">

                @{
                    var link = HttpContext.Current.Request.Url.AbsoluteUri;
                    Html.RenderAction("ContactProductUser_PartialView", "Product", new { RecieverEmail = Model.User.Email, RecieverName = Model.User.UserName, Linkshare = link, Category = "Imo" });
                }
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Fermer</button>
            </div>
        </div>
    </div>
</div>
<section class="row">

    <section class="col-md-8">
