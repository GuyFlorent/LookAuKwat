@model LookAuKwat.ViewModel.MultimediaViewModel
@using LookAuKwat.ViewModel
@{
    ViewBag.Title = "Déposer une annonce catégorie multimédia type Informatique";
}

    <h2>Déposer une annonce catégorie multimédia rubrique Informatique</h2>

@using (Html.BeginForm("AddFullModel", "Multimedia", new { TypeMultimedia = Model.TypeMultimedia, SearchOrAskJobMultimedia = Model.SearchOrAskJobMultimedia }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

       
        <div class="form-group" id="BrandInformatiquePhotocopiDiv">
            @Html.LabelFor(model => model.BrandInformatiquePhotocopi, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.BrandInformatiquePhotocopi, SelectListMethod.BrandInformatiquePhotocopyMultimedia(), "choisir", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.BrandInformatiquePhotocopi, "", new { @class = "text-danger" })
            </div>
        </div>

  
        <div class="form-group" id="ModelInformatiquePhotocopyDiv">
            @Html.LabelFor(model => model.ModelInformatiquePhotocopy, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.ModelInformatiquePhotocopy, SelectListMethod.ModelInformatiquePhotocopyMultimedia(), "choisir", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ModelInformatiquePhotocopy, "", new { @class = "text-danger" })
            </div>
        </div>
        
       
        <div class="form-group" id="CapacityDiv">
            @Html.LabelFor(model => model.Capacity, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Capacity, SelectListMethod.CapacityMultimedia(), "choisir", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Capacity, "", new { @class = "text-danger" })
            </div>
        </div>
       
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="btn btn-success">Suivant <span class="glyphicon glyphicon-menu-right"></span></button>
            </div>
        </div>
    </div>
}
