@model LookAuKwat.Models.AddPhoneNumberViewModel
@{
    ViewBag.Title = "Numéro de téléphone";
}

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("AddPhoneNumberFirstRegister", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Ajouter un numéro de téléphone</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <p class="success">Merci de mettre le code du pays au début( Exemple Cameroun +237, France +33, Allemagne +49)</p>
    <div class="form-group">
        @Html.LabelFor(m => m.Number, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Number, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Number, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Envoyer" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
