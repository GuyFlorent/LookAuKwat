            <div class="col-sm-12 section-t8">
                <div class="row">
                    <div class="col-md-7">

                        @using (Html.BeginForm("ContactUs", "Product", new { RecieverEmail = "contact@lookaukwat.com", RecieverName = "Lookaukwat", Linkshare = "" }, FormMethod.Post, new { @class = "form-a contactForm " }))

                        {

                            @Html.AntiForgeryToken()
                            <div id="sendmessage" class="text-success">@ViewBag.text</div>
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <div class="form-group">
                                        @Html.EditorFor(model => model.NameSender, new { htmlAttributes = new { @class = "form-control form-control-lg form-control-a", placeholder = "Votre Nom" } })
                                        @Html.ValidationMessageFor(model => model.NameSender, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <div class="form-group">
                                        @Html.EditorFor(model => model.EmailSender, new { htmlAttributes = new { @class = "form-control form-control-lg form-control-a", placeholder = "Votre Email" } })
                                        @Html.ValidationMessageFor(model => model.EmailSender, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="col-md-12">
                                    <div class="form-group">
                                        @Html.EditorFor(model => model.SubjectSender, new { htmlAttributes = new { @class = "form-control form-control-lg form-control-a", placeholder = "Votre Sujet" } })
                                        @Html.ValidationMessageFor(model => model.SubjectSender, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="col-md-12 ">
                                    <div class="form-group">
                                        @Html.TextAreaFor(model => model.Message, new { @class = "form-control", placeholder = "Message", @cols = "45", @rows = "8" })
                                        @Html.ValidationMessageFor(model => model.Message, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <button type="submit" class="btn btn-a">Envoyer le Message</button>
                                </div>
                            </div>
                        }

                    </div>
                    <div class="col-md-5 section-md-t3">
                        <div class="icon-box section-b2">
                            <div class="icon-box-icon">
                                <span class="ion-ios-paper-plane"></span>
                            </div>
