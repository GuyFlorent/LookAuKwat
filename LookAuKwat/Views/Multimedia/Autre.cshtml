@model LookAuKwat.ViewModel.MultimediaViewModel
@using LookAuKwat.ViewModel
@{
    ViewBag.Title = "Déposer une annonce catégorie multimédia type Autre ";
}

<h2>Déposer une annonce catégorie multimédia type Autre</h2>

@using (Html.BeginForm("AddFullModel", "Multimedia", new { TypeMultimedia = Model.TypeMultimedia, SearchOrAskJobMultimedia = Model.SearchOrAskJobMultimedia }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group " id="BrandPhoneAccesoriesDiv">
            @Html.LabelFor(model => model.BrandOtherMultimedia, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.BrandOtherMultimedia, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.BrandOtherMultimedia, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group " id="ModelOtherMultimediaDiv">
            @Html.LabelFor(model => model.ModelOtherMultimedia, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ModelOtherMultimedia, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ModelOtherMultimedia, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" id="CapacityDiv">
            @Html.LabelFor(model => model.Capacity, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Capacity, SelectListMethod.CapacityMultimedia(), "choisir", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Capacity, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group ">
            @Html.LabelFor(model => model.PriceMultimedia, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.PriceMultimedia, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.PriceMultimedia, "", new { @class = "text-danger" })
            </div>

        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="btn btn-success">Suivant <span class="glyphicon glyphicon-menu-right"></span></button>
            </div>
        </div>
    </div>
}
