@using System.Globalization;


<h2>Fiche de remunération</h2>

<div class="container">
    <div class="card">
        <div class="card-header">
            Date et heure d'impréssion de la fiche
            <strong>
                @{
                    //var st = DateTime.ParseExact(item.StartHour, "dd/MM/yyyy HH:mm", null);
                    var date = DateTime.Now.ToString("ddd, dd MMM yyy HH':'mm", new CultureInfo("fr-FR"));

                }
                @date
            </strong>

            <span class="float-right"> <strong>Status:</strong> Valide</span>

        </div>
        <div class="card-header">
            Salaire du mois de <strong>@ViewBag.Month</strong>
        </div>
        <div class=" card-header">
            N° de la fiche :  <strong>@ViewBag.ParainId@DateTime.Now.ToString("ddMMyyyy")</strong>
        </div>
        <div class="card-body">
            <div class="row mb-4">
                <div class="col-sm-6">
                    <h6 class="mb-3">De:</h6>
                    <div>
                        <img class="footer__img logo img-responsive" src="@Url.Content("~/UserImage/logo_lookaukwat.png")">
                    </div>
                    <div>Oyom-Abang</div>
                    <div>Yaoundé, Cameroun</div>
                    <div>Email: contact@lookaukwat.com</div>
                    <div>Téléphone/WhatSapp: +237 6 57 63 30 39</div>
                </div>

                <div class="col-sm-6">
                    <h6 class="mb-3">A:</h6>
                    <div>
                        <strong>@ViewBag.FirstName</strong>
                    </div>
                    <div>Cameroun</div>
                    <div>Email: @ViewBag.Email</div>
                    <div>Téléphone: @ViewBag.Number</div>
                </div>



            </div>

            <div class="table-responsive-sm">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th class="center">#</th>
                            <th>Parrainage</th>
                            <th class="right">Nombre</th>
                            <th class="center">Prix unité</th>
                            <th class="right">Total</th>
                        </tr>
                    </thead>
                    <tbody>


                        <tr>
                            <td class="center">1</td>
                            <td class="left strong">
                                Sans Confirmation Email ou Tel

                            </td>
                            <td class="left">@ViewBag.NoConfirmNoAnnounce</td>
                            <td class="center"> 0 FCFA</td>
                            <td class="right"> 0 FCFA</td>
                        </tr>
                        <tr>
                            <td class="center">2</td>
                            <td class="left strong">
                                + Confirmation Email/Tel sans annonce

                            </td>
                            <td class="left">@ViewBag.TotalWithNoAnnouce</td>
                            <td class="center"> 0 FCFA</td>
                            <td class="right"> 0 FCFA</td>
                        </tr>
                        <tr>
                            <td class="center">3</td>
                            <td class="left strong">
                                + Confirmation Email/Tel + annonce

                            </td>
                            <td class="left">@ViewBag.TotalWithAnnouce</td>
                            <td class="center"> 100 FCFA</td>
                            <td class="right"> @ViewBag.Totalprice FCFA</td>
                        </tr>

                    </tbody>
                </table>
            </div>
            <div class="row">
                <div class="col-lg-4 col-sm-5">

                </div>

                <div class="col-lg-4 col-sm-5 ml-auto">
                    <table class="table table-clear">
                        <tbody>
                            <tr>
                                <td class="left">
                                    <strong>Total de parrainge du mois</strong>
                                </td>
                                <td class="right">@ViewBag.TotalWithAnnouce</td>
                            </tr>
                            <tr>
                                <td class="left">
                                    <strong>Total Hors taxes</strong>
                                </td>
                                <td class="right">
                                    @ViewBag.Totalprice FCFA
                                </td>
                            </tr>
                            @*<tr>
                                    <td class="left">
                                        <strong>Discount (20%)</strong>
                                    </td>
                                    <td class="right">$1,699,40</td>
                                </tr>*@
                            <tr>
                                <td class="left">
                                    <strong>TVA (0%)</strong>
                                </td>
                                <td class="right">
                                    @ViewBag.Totalprice FCFA
                                </td>
                            </tr>
                            <tr>
                                <td class="left">
                                    <strong>Total (TTC)</strong>
                                </td>
                                <td class="right">
                                    <strong>@ViewBag.Totalprice </strong> FCFA
                                </td>
                            </tr>
                        </tbody>
                    </table>

                </div>

            </div>

        </div>
    </div>
</div>

<script>
     $(document).ready(function () {
         $('header').empty();
         $('footer').empty();
     });
</script>