@foreach (var liste in Model)
{
    if (liste.Category.CategoryName == "Emploi")
    {
        <div>
            <a href="@Url.Action("JobDetail", "Job", new { id = liste.id }, null)">
                <div>
                    <div style="border-radius: 25px;background: lightgray;padding: 20px; height:260px" class="thumbnail">
                        <div class="row">
                            <img src="@liste.Images.Select(m=>m.Image).First()" alt="image du groupe @liste.Title" class="img-rounded img-responsive" />
                        </div>
                        <div class="row">
                            <h4><span>@liste.Title</span></h4>
                            <p class="price"><span>@liste.Price FCFA</span></p>
                            <p class="bottom"><span>@liste.Town</span></p>
                        </div>
                    </div>
                </div>
            </a>
        </div>
    }
    else if (liste.Category.CategoryName == "Immobilier")
    {
        <div>
            <a href="@Url.Action("ApartDetail", "ApartmentRental", new { id = liste.id }, null)">
                <div>
                    <div style="border-radius: 25px;background: lightgray;padding: 20px; height:260px" class="thumbnail">
                        <div class="row">
                            <img src="@liste.Images.Select(m=>m.Image).First()" alt="image du groupe @liste.Title" class="img-rounded img-responsive" />
                        </div>
                        <div class="row">
                            <p><span>@liste.Title</span></p>
                            <p class="price"><span>@liste.Price FCFA</span></p>
                            <p class="bottom"><span>@liste.Town</span></p>
                        </div>
                    </div>
                </div>
            </a>
        </div>
    }
    else if (liste.Category.CategoryName == "Multimedia")
    {
        <div>
            <a href="@Url.Action("MultimediaDetail", "Multimedia", new { id = liste.id }, null)">
                <div>
                    <div style="border-radius: 25px;background: lightgray;padding: 20px; height:260px" class="thumbnail">
                        <div class="row">
                            <img src="@liste.Images.Select(m=>m.Image).First()" alt="image du groupe @liste.Title" class="img-rounded img-responsive" />
                        </div>
                        <div class="row">
                            <p><span>@liste.Title</span></p>
                            <p class="price"><span>@liste.Price FCFA</span></p>
                            <p class="bottom"><span>@liste.Town</span></p>
                        </div>
                    </div>
                </div>
            </a>
        </div>
    }
}

